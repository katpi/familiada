{
  "extends": "tslint-config-airbnb",
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "max-line-length": [
      true,
      120
    ],
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first",
        "grouped-imports": true
      }
    ]
  }
}
